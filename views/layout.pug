doctype html
html
  head
    title Members Only
    link(rel='shortcut icon' href='/images/members.png')
    link(rel='stylesheet' href='/stylesheets/style.css')
  body
  div.main
    div.sidebar
      if (loggedIn)
        h1.sidebar-title Logged in as #{user.username}
        a.link(href='/') Forum
        form(action='/log-out' method='post')
          button.link(type='submit') Log Out
      else
        h1.sidebar-title Not logged in
        a.link(href='/') Forum
        a.link(href='/sign-up') Sign In
    div.background
      block content
